<%= form_for(@costumer) do |f| %>
  <% if @costumer.errors.any? %>
    <div id="error_explanation">
        </div>
  <% end %>

<%#Campo nombre/%>

<div class="control-group<%= @costumer.errors[:nombre].any? ? " error" : "" %>">
   <%= f.label :nombre, :class => 'control-label' %>
   <div class="controls">
     <%= f.text_field :nombre, :class => 'text_field' %>
     <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
      <span class="help-inline">
      <%= @costumer.errors[:nombre].any? ? @costumer.errors[:nombre].to_s[/\w([^"]*)/] : "" %></span>
